{
    "name": "dokai-switch",
    "version": "0.0.0-development",
    "description": "",
    "main": "index.js",
    "bin": "index.js",
    "private": "true",
    "scripts": {
        "prebuild": "rimraf build dist",
        "build": "pkg . && mkdir dist && create-nodew-exe build/dokai-switch.exe dist/dokai-switch.exe",
        "postbuild": "rimraf build",
        "semantic-release": "semantic-release"
    },
    "author": "Antoine 'bLk`' Pr√©cigout",
    "dependencies": {
        "commander": "^9.4.0"
    },
    "devDependencies": {
        "@semantic-release/commit-analyzer": "^9.0.2",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^8.0.6",
        "@semantic-release/npm": "^9.0.1",
        "@semantic-release/release-notes-generator": "^10.0.3",
        "create-nodew-exe": "^1.0.10",
        "pkg": "^5.8.0",
        "rimraf": "^3.0.2",
        "semantic-release": "^19.0.5"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Ballrock/dokai-switch.git"
    },
    "pkg": {
        "targets": [
            "node16-win-x64"
        ],
        "outputPath": "build"
    },
    "release": {
        "branches": [
            "main"
        ],
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            [
                "@semantic-release/github",
                {
                    "assets": [
                        {
                            "path": "dist/dokai-switch.exe",
                            "label": "Windows Executable (x64)"
                        }
                    ]
                }
            ],
            [
                "@semantic-release/npm",
                {
                    "npmPublish": false
                }
            ],
            [
                "@semantic-release/git",
                {
                    "assets": [
                        "package.json"
                    ],
                    "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
                }
            ]
        ]
    }
}
